@model IEnumerable<Product>

<div class="row pb-3">
    @foreach(var product in Model)
        {
            <div class="col-lg-3 col-sm-6">
                <div class="row p-2">
                    <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border5 rounded" style="height: 400px;">
                            <div style="height: 200px; overflow: hidden;">
                                <img src="@product.ImageUrl" class="card-img-top rounded" style="object-fit: contain; width: 100%; height: 100%;" />
                            </div>
                            <div class="card-body pb-0" >
                                <div class="pl-1">
                                <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                                    <p class="card-title text-warning text-center">by <b>@product.Author</b></p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center">Price from: <span>@product.Price100.ToString("c")</span></p>
                                
                                </div>
                            </div>
                            <div class="mt-auto">
                                <a asp-action="Detail" asp-route-id="@product.Id" class="btn btn-primary bg-gradient border-0 form-control">Details</a>
                            </div>
                        </div>

                    </div>

                </div>

            </div>
        }


</div>
